<Page
    x:Class="DesktopApplication.Views.Forms.AccountForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DesktopApplication.Views.Forms"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">

        <TextBox Header="Account Name" PlaceholderText="Enter Account Name"/>
        
        <ComboBox x:Name="AccountType" PlaceholderText="Choose Account Type" Margin="0,10,0,10">
            <x:String>Checking</x:String>
            <x:String>Savings</x:String>
        </ComboBox>
        
        <TextBox Header="Account Balance" PlaceholderText="Enter Account Balance"/>
        
    </StackPanel>
    
</Page>
